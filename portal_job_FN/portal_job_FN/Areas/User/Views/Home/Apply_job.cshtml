@model portal_job_FN.Models.ApplyJob
@{
    ViewData["Title"] = "applyJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* sử dụng viewBag *@
@{
    var post_jobs = ViewBag.post_jobs as portal_job_FN.Models.PostJob;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="mb-4 text-primary">Ứng tuyển cho vị trí @post_jobs?.job_name</h4>
            <h5 class="mb-4">
             
                @if (post_jobs?.applicationUser != null)
                {
                    <img src="@post_jobs.applicationUser.image_url" style="height:100px" class="rounded-circle me-2" alt="Logo">
                    <!-- Sử dụng toán tử ?? để cung cấp một hình ảnh mặc định nếu image_url là null -->
                    @post_jobs.applicationUser.company_name
         
                }
            </h5>


            <form asp-action="Apply_job" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-12 col-sm-6">
                        <input type="text" asp-for="FullName" class="form-control" placeholder="Tên của bạn" required>
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-sm-6">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 col-sm-6">

                        <label asp-for="url_cv" class="form-label me-2 mb-0">Chọn CV</label>
                        <input type="file" asp-for="url_cv" class="form-control bg-white" required>
                        <span asp-validation-for="url_cv" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <textarea class="form-control" asp-for="cover_letter" rows="5" placeholder="Thư giới thiệu" required></textarea>
                        <span asp-validation-for="cover_letter" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary w-100" type="submit" value="Apply_job">Ứng tuyển ngay</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
