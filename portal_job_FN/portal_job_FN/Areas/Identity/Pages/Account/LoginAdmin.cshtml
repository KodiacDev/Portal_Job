@page
@model LoginModelAdmin

@{
    ViewData["Title"] = "";
    Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/admin/images/img-01.png" alt="IMG">
            </div>

            <form class="login100-form validate-form" id="account" method="post">
                <span class="login100-form-title">
                    Admin Login
                </span>

                <!-- Email Input -->
                <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                    <input asp-for="Input.Email" class="input100" autocomplete="username" placeholder="Email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-envelope" aria-hidden="true"></i>
                    </span>
                </div>

                <!-- Password Input -->
                <div class="wrap-input100 validate-input" data-validate="Password is required">
                    <input asp-for="Input.Password" class="input100" autocomplete="current-password" placeholder="Password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>

                <!-- Remember Me Checkbox -->
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <!-- Submit Button -->
                <div class="container-login100-form-btn">
                    <button id="login-submit" type="submit" class="login100-form-btn">
                        Login
                    </button>
                </div>

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            </form>
        </div>
    </div>
</div>

	
	






