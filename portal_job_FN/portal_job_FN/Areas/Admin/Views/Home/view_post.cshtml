@model IEnumerable<portal_job_FN.Models.PostJob>

@{
    ViewData["Title"] = "ViewPost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 style="margin-bottom: 20px; font-family: 'Times New Roman'">
                Quản lý tin tuyển dụng
            </h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead style="font-weight: bold; font-size: 20px;">
                        <tr>
                            <th style="font-weight: bold; font-size: 30px; color: black; font-family: 'Times New Roman'">Công ty</th>
                            <th style="font-weight: bold; font-size: 30px; color: black; font-family: 'Times New Roman'">Tên công việc</th>
                            <th style="font-weight: bold; font-size: 30px; color: black; font-family: 'Times New Roman'">Đăng ngày</th>
                            <th style="font-weight: bold; font-size: 30px; color: black; font-family: 'Times New Roman'">Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var postjob in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@postjob.applicationUser?.image_url" alt="Company Logo" style="width: 50px; height: 50px; border-radius: 50%;">
                                    <span style="font-size: 20px; color: black; font-family: 'Times New Roman'; margin-left: 10px;">@postjob.applicationUser?.company_name</span>
                                </td>
                                <td style="font-size: 20px; color: black; font-family: 'Times New Roman'; vertical-align: middle;">
                                    <span>@postjob.job_name</span>
                                </td>
                                <td style="font-size: 20px; color: black; font-family: 'Times New Roman'; vertical-align: middle;">
                                    <div>
                                        <!-- Icon khu vực -->
                                        <i class="mdi mdi-calendar" style="color: green;"></i>
                                        <!-- Hiển thị khu vực -->
                                        <span>@postjob.create_at</span>
                                    </div>
                                </td>
                                <td style="font-size: 20px; color: black; font-family: 'Times New Roman'; vertical-align: middle;">
                                    <a class="btn btn-danger" href="#" onclick="confirmDelete(@postjob.Id)">Xóa</a>

                                    <a class="btn btn-info" href="/Admin/Home/Details/@postjob.Id">Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@* canh bao xoa *@
<script>
    function confirmDelete(id) {
        if (confirm('Bạn có chắc chắn muốn xóa bài đăng này không?')) {
            window.location.href = '/Admin/Home/Delete/' + id;
        }
    }
</script>