@model portal_job_FN.Models.ApplicationUser
@{
    ViewData["Title"] = "ViewPost";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container-fluid bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                <img class="rounded-circle mt-5" width="150px" src="@Model.image_url">
                <span style="font-family:'Times New Roman'" class="font-weight-bold"><h4>@Model.company_name</h4></span>
                <span class="text-black-50">@Model.Email</span>
                <span> </span>
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 style="font-family:'Times New Roman'" class="text-right">Thông tin nhà tuyển dụng</h3>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Tên công ty</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.company_name</div>
                    </div>
                    <div class="col-md-6">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">SDT công ty</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.contact_no</div>
                    </div>

                    <div class="col-md-12">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Website công ty</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.website</div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Tên cá nhân</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.fullname</div>
                    </div>
                    <div class="col-md-6">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Số điện thoại cá nhân</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.mobile_no</div>
                    </div>
                    <div class="col-md-6">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Vị trí công tác</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.position_title</div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Địa điểm công ty</label>
                        <div class="form-control" style="font-family:'Times New Roman';font-size:18px">@Model.address</div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels" style="font-family:'Times New Roman';font-size:20px">Giới thiệu về công ty</label>
                        <textarea class="form-control" style="font-family:'Times New Roman';height: 200px;font-size:18px">@Model.introduce_company</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>