@model portal_job_FN.Models.PostJob

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h2 style="margin-bottom:20px; font-family:'Times New Roman'">
                Tin tuyển dụng chi tiết
            </h2>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead style="font-weight: bold; font-size: 20px;">
                        <tr>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Tên công việc</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Hình thức</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Mô tả</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Lương từ</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Địa điểm</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Đăng ngày</th>
                            <th style="font-weight: bold; font-size: 30px;color:black; font-family:'Times New Roman'">Hạn nộp hồ sơ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td style="font-size: 20px;color:black">
                                <span>@Model.job_name</span>
                            </td>
                            <td style="font-size: 20px; color: black;">
                                <i class="fas fa-briefcase"></i> @Model.employmentType
                            </td>

                            <td style="font-size: 20px;color:black;font-size: 20px; width:500px; word-wrap: break-word; white-space: normal;"">@Model.job_description</td>
                            <td style="font-size: 20px;color:black"><i class="far fa-money-bill-alt text-primary me-2"></i>@string.Format("{0} Triệu - {1} Triệu", @Model.salary_min, @Model.salary_max)</td>
                            <td style="font-size: 20px;color:black">
                                <div>
                                    <!-- Icon địa điểm -->
                                    <i class="fas fa-map-marker-alt" style="color:green"></i>
                                    <!-- Hiển thị địa điểm -->
                                    <span>@Model.job_Location?.province_name</span>
                                </div>
                            </td>
                            <td style="font-size: 20px;color:black">
                                <div>
                                    <!-- Icon ngày -->
                                    <i class="far fa-calendar-alt" style="color:green"></i>
                                    <!-- Hiển thi ngày tạo -->
                                    <span>@Model.create_at</span>
                                </div>
                            </td>

                            <td style="font-size: 20px;color:black">
                                <i class="far fa-calendar-alt" style="color:green"></i>
                                 @string.Format("{0:dd/MM/yyyy}", Model.apply_date)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






<div>
    <a class="btn btn-primary" href="/Admin/Home/view_post">Trở về</a>
</div>
