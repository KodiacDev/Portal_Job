@model portal_job_FN.Models.VnpayModel
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout_Company.cshtml";
}

<bodybodyCheckout className='snippet-body'>
    <div class="container mt-4 mb-4">
        <div class="row d-flex cart align-items-center justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="d-flex justify-content-center border-bottom">
                        <div class="p-3">
                            <div class="progresses">
                                <div class="steps">
                                    <span><i class="fa fa-check"></i></span>
                                </div>
                                <span class="line"></span>

                                <div class="steps">
                                    <span><i class="fa fa-check"></i></span>
                                </div>
                                <span class="line"></span>

                                <div class="steps">
                                        <span><i class="fa fa-check"></i></span>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row g-0">
                        <div class="col-md-6 border-right p-5">
                            <div class="text-center order-details">
                                <div class="d-flex justify-content-center mb-5 flex-column align-items-center" style="font-size: 22px;">
                                    <span class="check1"><i class="fa fa-check"></i></span>
                                    <span class="font-weight-bold">Thanh toán thành công</span>
                                    <small class="mt-2">
                                        Lượt đăng bài đã được cộng thêm.
                                    </small>
                                </div>
                                <a asp-controller="Payment" asp-action="ListHistoryPayment" class="btn btn-danger btn-block order-button" style="font-size:18px">
                                    Lịch sử nạp
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6 background-muted" >
                            <div class="p-3 border-bottom">
@*                                 <div class="d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="fa fa-clock-o text-muted"></i> @Model.create_at
                                    </span>
                                </div> *@
                           @*      <div class="mt-3">
                                    <h6 class="mb-0 font-weight-bold" style="font-size: 17px;">Gói 5 bài viết giá 49.000VND</h6>
                                </div> *@
                            </div>
                            <div class="row g-0 border-bottom" style="font-size: 17px;">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>Tên đơn hàng</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>@Model.OrderDescription</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-0 border-bottom" style="font-size: 17px;">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>
                                            Ngày tạo đơn
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>@Model.create_at</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-0 border-bottom" style="font-size: 17px;">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>Phương thức</span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span>@Model.PaymentMethod</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row g-0 border-bottom" style="font-size: 17px;">
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span class="font-weight-bold">
                                            Total
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 d-flex justify-content-center align-items-center">
                                        <span class="font-weight-bold">@Model.Amount VND</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div> </div>
                </div>
            </div>
        </div>
    </div>

    <script type='text/javascript'
            src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js'></script>
